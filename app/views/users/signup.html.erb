<h2>新規ユーザー登録</h2>
<%= form_tag("/users/create") do %>
    <% if @user.errors %>
        <% @user.errors.full_messages.each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    <% end %>
    <p>ユーザー名</p>
    <input name="name" value="<%= @user.name %>">
    <p>メールアドレス</p>
    <input name="email" value="<%= @user.email %>">
    <p>パスワード</p>
    <input type="password" name="password">
    <input type="submit" value="新規登録">
<% end %>